# API Sentinel Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env file to version control

# Environment (development, staging, production)
ENVIRONMENT=development

# API Sentinel Backend URL
API_BASE_URL=https://api.apisentinel.com

# Your API Sentinel API Key (get this from dashboard.apisentinel.com)
API_SENTINEL_KEY=your-api-key-here

# Your Company/Customer ID
CUSTOMER_ID=your-customer-id

# Primary Payment Gateway
PRIMARY_GATEWAY=stripe

# Secondary Payment Gateway (for failover)
SECONDARY_GATEWAY=paypal

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_DEBUG_LOGGING=false
ENABLE_OFFLINE_MODE=true

# Performance Tuning
REQUEST_TIMEOUT_SECONDS=30
MAX_RETRY_ATTEMPTS=3
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Optional: Error Reporting (Sentry DSN)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Optional: Custom Headers
# API_CUSTOM_HEADER_1=value1
# API_CUSTOM_HEADER_2=value2
